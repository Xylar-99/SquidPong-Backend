

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}



enum TwoFAMethod {
  email
  authenticator
  sms
}


model User {
  id              Int     @id @default(autoincrement())
  // username        String  @unique
  email           String  @unique
  password        String?
  is_2fa_enabled  Boolean @default(false) 
  two_fa_method   TwoFAMethod?
}
