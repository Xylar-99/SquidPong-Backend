
generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}



enum TwoFAMethod {
  none
  authenticator
  email
}



model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  email       String   @unique
  password    String?


  twoFAMethod TwoFAMethod     @default(none)

  // app
  twoFASecret String?
  twoFAQRCode String?
  twoFAKey    String?

  // email
  twoFAEmailCode   String?
  twoFAEmailExpiry DateTime?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
