{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "baseUrl": "./src",
  "paths": {
    "@/*": ["*"]
  }
}